---
import "../styles/card.css";

interface Props {
  title: string;
  body: string;
  href: string;
  author?: string;
}

const { href, title, body, author } = Astro.props;
---

<li class="link-card">
  <a href={href}>
    <h2>
      {title}
      <span>&rarr;</span>
    </h2>
    <p>
      {body}
    </p>
    {author && <p>by : {author}</p>}
  </a>
</li>
